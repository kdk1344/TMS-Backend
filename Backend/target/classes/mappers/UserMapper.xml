<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user-mapper.xml -->
<mapper namespace="com.tms.backend.mapper.UserMapper">
    <select id="getUserByUserID" parameterType="String" resultType="User">
        SELECT *
        FROM users
        WHERE USER_ID = #{userID}
    </select>
    
    <select id="findAll" resultType="User">
        SELECT USER_ID, USER_NAME, AUTHORITY_NAME FROM users
    </select>
    
    <select id="findUsersByFilter" parameterType="string" resultType="User">
        SELECT USER_ID, USER_NAME, PASSWORD, AUTHORITY_CODE, AUTHORITY_NAME 
        FROM Users 
        WHERE USER_NAME LIKE CONCAT('%', #{filter}, '%')
    </select>
</mapper>